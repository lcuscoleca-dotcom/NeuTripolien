<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="neu.tripolien.neutripolien.WelcomeController"
            prefWidth="600" prefHeight="400"
            style="
                -fx-background-image: url('/images/background.jpg');
                -fx-background-size: cover;
                -fx-background-position: center;
                -fx-background-repeat: no-repeat;
            ">

    <!-- MENU BAR -->
    <top>
        <MenuBar>
            <menus>
                <Menu text="Settings">
                    <items>
                        <MenuItem text="About"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>

    <!-- CENTER CONTENT -->
    <center>
        <VBox alignment="CENTER" spacing="40" style="-fx-padding: 50;">

            <!-- TITLE -->
            <Label text="Welcome to NEW TRIPOLIA!">
                <font>
                    <Font name="Arial Black" size="34"/>
                </font>
                <style>
                    -fx-text-fill: white;
                    -fx-font-weight: bold;
                </style>
            </Label>

            <!-- NICKNAME -->
            <VBox alignment="CENTER" spacing="15">
                <Label text="Choose your Nickname:"
                       style="
                         -fx-text-fill: white;
                         -fx-font-size: 18px;
                         -fx-font-weight: bold;
                       "/>

                <TextField fx:id="nicknameField"
                           promptText="Enter nickname"
                           maxWidth="220"
                           style="
                             -fx-font-size: 16px;
                             -fx-font-weight: bold;
                           "/>
            </VBox>

            <!-- BUTTON -->
            <Button fx:id="startButton"
                    text="Start Quiz"
                    onAction="#onStartClicked"
                    prefWidth="180"
                    prefHeight="45"
                    style="
                      -fx-font-size: 16px;
                      -fx-font-weight: bold;
                    "/>

        </VBox>
    </center>

</BorderPane>
