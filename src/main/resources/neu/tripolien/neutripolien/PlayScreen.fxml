<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="400" prefWidth="600" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"> <!-- Schwarzer Hintergrund -->

    <!-- TOP BAR -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" BorderPane.alignment="CENTER">
            <children>
                <Label style="-fx-text-fill: white; -fx-font-size: 18px;" text="Easy"> <!-- Weiße Schrift -->
                    <padding>
                        <Insets left="10" />
                    </padding>
                </Label>

                <Region HBox.hgrow="ALWAYS" />

                <Label alignment="CENTER_RIGHT" style="-fx-text-fill: white; -fx-font-size: 18px;" text="Highscore:"> <!-- Weiße Schrift -->
                    <padding>
                        <Insets right="10" />
                    </padding>
                </Label>
                <Label fx:id="Highscore_Points" style="-fx-text-fill: white; -fx-font-size: 18px;" text="Highscore_Points" /> <!-- Weiße Schrift -->
            </children>
        </HBox>
    </top>

    <!-- CENTER CONTENT -->
    <center>
        <VBox alignment="CENTER" spacing="20" BorderPane.alignment="CENTER">
            <children>
                <Label alignment="CENTER" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" text="WHAT FLAG IS THIS?" />
                <ImageView fitHeight="250" preserveRatio="true">
                    <image>
                        <Image url="@../flags/example_flag.png" />
                    </image>
                </ImageView>
            </children>
        </VBox>
    </center>

    <!-- BOTTOM ANSWERS -->
    <bottom>
        <HBox alignment="CENTER" spacing="40" BorderPane.alignment="CENTER">
            <children>
                <!-- Left column -->
                <VBox spacing="10">
                    <ToggleButton fx:id="Antwort_A" mnemonicParsing="false" prefHeight="100" prefWidth="400" style="-fx-background-color: red; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="Antwort A" />
                    <ToggleButton fx:id="Antwort_C" mnemonicParsing="false" prefHeight="100" prefWidth="400" style="-fx-background-color: yellow; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="Antwort C" />
                </VBox>

                <!-- Right column -->
                <VBox spacing="10">
                    <ToggleButton fx:id="Antwort_B" mnemonicParsing="false" prefHeight="100" prefWidth="400" style="-fx-background-color: blue; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="Antwort B" />
                    <ToggleButton fx:id="Antwort_D" mnemonicParsing="false" prefHeight="100" prefWidth="400" style="-fx-background-color: green; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="Antwort D" />
                </VBox>
            </children>
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
            <padding>
                <Insets bottom="10.0" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>
