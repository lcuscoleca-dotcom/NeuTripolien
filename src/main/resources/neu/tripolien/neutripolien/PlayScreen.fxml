<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane
        xmlns="http://javafx.com/javafx/21"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="neu.tripolien.neutripolien.PlayscreenController"
        style="-fx-background-color: #0d1b2a;"
        stylesheets="@quiz.css">

    <!-- ================= TOP BAR ================= -->
    <top>
        <BorderPane style="-fx-padding: 15;">

            <!-- LEFT: Difficulty (fixed width, content unchanged) -->
            <left>
                <VBox prefWidth="180" alignment="CENTER_LEFT">
                    <Label fx:id="difficultyLabel"
                           text="Normal"
                           style="-fx-text-fill: #e0e1dd;
                                  -fx-font-size: 18px;
                                  -fx-font-weight: bold;" />
                </VBox>
            </left>

            <!-- CENTER: Lives (true center) -->
            <center>
                <HBox alignment="CENTER" spacing="8">
                    <Label text="Lives:"
                           style="-fx-text-fill: #e0e1dd;
                                  -fx-font-size: 18px;" />
                    <Label fx:id="livesLabel"
                           text="♥♥♥"
                           style="-fx-text-fill: red;
                                  -fx-font-size: 24px;" />
                </HBox>
            </center>

            <!-- RIGHT: Score (same fixed width as left) -->
            <right>
                <VBox prefWidth="180" alignment="CENTER_RIGHT">
                    <HBox alignment="CENTER_RIGHT" spacing="6">
                        <Label text="Score:"
                               style="-fx-text-fill: #e0e1dd;
                                      -fx-font-size: 18px;" />
                        <Label fx:id="Highscore_Points"
                               text="0"
                               style="-fx-text-fill: #fca311;
                                      -fx-font-size: 18px;
                                      -fx-font-weight: bold;
                                      -fx-font-family: Consolas;" />
                    </HBox>
                </VBox>
            </right>

        </BorderPane>
    </top>

    <!-- ================= LEFT (QUESTION) ================= -->
    <left>
        <VBox prefWidth="180"
              alignment="CENTER"
              spacing="12"
              style="-fx-padding: 20;">
            <Label text="QUESTION"
                   style="-fx-text-fill: #778da9;
                          -fx-font-size: 14px;" />
            <Label fx:id="questionLabel"
                   text="1 / 10"
                   style="-fx-text-fill: white;
                          -fx-font-size: 26px;
                          -fx-font-weight: bold;" />
        </VBox>
    </left>

    <!-- ================= RIGHT (TIMER) ================= -->
    <right>
        <VBox prefWidth="180"
              alignment="CENTER"
              spacing="12"
              style="-fx-padding: 20;">
            <Label text="TIME"
                   style="-fx-text-fill: #778da9;
                          -fx-font-size: 14px;" />
            <Label fx:id="timeLabel"
                   text="14s"
                   style="-fx-text-fill: #fca311;
                          -fx-font-size: 26px;
                          -fx-font-weight: bold;" />
        </VBox>
    </right>

    <!-- ================= CENTER (FLAG + QUESTION) ================= -->
    <center>
        <VBox alignment="CENTER" spacing="30">
            <Label text="WHAT FLAG IS THIS?"
                   style="-fx-text-fill: white;
                          -fx-font-size: 34px;
                          -fx-font-weight: bold;" />
            <StackPane prefWidth="450" prefHeight="300">
                <ImageView fx:id="flagImageView"
                           fitWidth="450"
                           fitHeight="300"
                           preserveRatio="true" />
            </StackPane>
        </VBox>
    </center>

    <!-- ================= BOTTOM (ANSWERS) ================= -->
    <bottom>
        <HBox alignment="CENTER" spacing="50" style="-fx-padding: 30;">

            <VBox spacing="20">
                <Button fx:id="buttonA"
                        prefWidth="300"
                        prefHeight="90"
                        onAction="#handleAnswer"
                        style="-fx-font-size: 24px; -fx-font-weight: bold;"
                        styleClass="answer-box"/>
                <Button fx:id="buttonC"
                        prefWidth="300"
                        prefHeight="90"
                        onAction="#handleAnswer"
                        style="-fx-font-size: 24px; -fx-font-weight: bold;"
                        styleClass="answer-box"/>
            </VBox>

            <VBox spacing="20">
                <Button fx:id="buttonB"
                        prefWidth="300"
                        prefHeight="90"
                        onAction="#handleAnswer"
                        style="-fx-font-size: 24px; -fx-font-weight: bold;"
                        styleClass="answer-box"/>
                <Button fx:id="buttonD"
                        prefWidth="300"
                        prefHeight="90"
                        onAction="#handleAnswer"
                        style="-fx-font-size: 24px; -fx-font-weight: bold;"
                        styleClass="answer-box"/>
            </VBox>

        </HBox>
    </bottom>

</BorderPane>
