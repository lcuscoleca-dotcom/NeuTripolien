<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400" prefWidth="600" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1">

    <!-- TOP BAR -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" BorderPane.alignment="CENTER">
            <children>
                <Label text="Easy">
                    <padding>
                        <Insets left="10" />
                    </padding>
                </Label>

                <Region HBox.hgrow="ALWAYS" />

                <Label alignment="CENTER_RIGHT" text="Highscore:">
                    <padding>
                        <Insets right="10" />
                    </padding>
                </Label>
            </children>
        </HBox>
    </top>

    <!-- CENTER CONTENT -->
    <center>
        <VBox alignment="CENTER" spacing="20" BorderPane.alignment="CENTER">
            <children>
                <Label alignment="CENTER" text="WHAT FLAG IS THIS?">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font></Label>
                <ImageView fitHeight="250" preserveRatio="true">
                    <image>
                        <Image url="@../flags/example_flag.png" />
                    </image>
                </ImageView>
            </children>
        </VBox>
    </center>

    <!-- BOTTOM ANSWERS -->
    <bottom>
        <HBox alignment="CENTER" spacing="40" BorderPane.alignment="CENTER">
            <children>
                <!-- Left column -->
                <VBox spacing="10">
                    <ToggleButton fx:id="Antwort_A" mnemonicParsing="false" prefWidth="160" text="Antwort A" />
                    <ToggleButton fx:id="Antwort_C" mnemonicParsing="false" prefWidth="160" text="Antwort C" />
                </VBox>

                <!-- Right column -->
                <VBox spacing="10">
                    <ToggleButton fx:id="Antwort_B" mnemonicParsing="false" prefWidth="160" text="Antwort B" />
                    <ToggleButton fx:id="Antwort_D" mnemonicParsing="false" prefWidth="160" text="Antwort D" />
                </VBox>
            </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets bottom="10.0" />
         </padding>
        </HBox>
    </bottom>
</BorderPane>
