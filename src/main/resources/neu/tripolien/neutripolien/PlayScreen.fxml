<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefWidth="900"
            prefHeight="600"
            stylesheets="@quiz.css"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            style="-fx-background-color: #0d1b2a;">

    <!-- ================= TOP BAR ================= -->
    <top>
        <HBox alignment="CENTER_LEFT"
              spacing="10"
              style="-fx-padding: 15;">
            <children>

                <Label text="Easy"
                       style="-fx-text-fill: #e0e1dd;
                              -fx-font-size: 18px;"/>

                <Region HBox.hgrow="ALWAYS"/>

                <Label text="Highscore:"
                       style="-fx-text-fill: #e0e1dd;
                              -fx-font-size: 18px;"/>

                <Label fx:id="Highscore_Points"
                       text="1230"
                       style="-fx-text-fill: #fca311;
                              -fx-font-size: 18px;
                              -fx-font-weight: bold;"/>
            </children>
        </HBox>
    </top>

    <!-- ================= LEFT INFO ================= -->
    <left>
        <VBox alignment="CENTER"
              spacing="15"
              style="-fx-padding: 20;">
            <children>
                <Label text="QUESTION"
                       style="-fx-text-fill: #778da9;
                              -fx-font-size: 14px;"/>

                <Label text="3 / 10"
                       style="-fx-text-fill: white;
                              -fx-font-size: 26px;
                              -fx-font-weight: bold;"/>
            </children>
        </VBox>
    </left>

    <!-- ================= RIGHT INFO ================= -->
    <right>
        <VBox alignment="CENTER"
              spacing="15"
              style="-fx-padding: 20;">
            <children>
                <Label text="TIME"
                       style="-fx-text-fill: #778da9;
                              -fx-font-size: 14px;"/>

                <Label text="08s"
                       style="-fx-text-fill: #fca311;
                              -fx-font-size: 26px;
                              -fx-font-weight: bold;"/>
            </children>
        </VBox>
    </right>

    <!-- ================= CENTER CONTENT ================= -->
    <center>
        <VBox alignment="CENTER"
              spacing="30">
            <children>

                <Label text="WHAT FLAG IS THIS?"
                       style="-fx-text-fill: white;
                              -fx-font-size: 34px;
                              -fx-font-weight: bold;"/>

                <ImageView fitHeight="320"
                           preserveRatio="true">
                    <image>
                        <Image url="@../flags/example_flag.png"/>
                    </image>
                </ImageView>

            </children>
        </VBox>
    </center>

    <!-- ================= ANSWERS ================= -->
    <bottom>
        <HBox alignment="CENTER"
              spacing="50"
              style="-fx-padding: 30;">
            <children>

                <!-- LEFT COLUMN -->
                <VBox spacing="20">
                    <Button text="Antwort A"
                            prefWidth="300"
                            prefHeight="90"
                            styleClass="answer-box"
                            style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

                    <Button text="Antwort C"
                            prefWidth="300"
                            prefHeight="90"
                            styleClass="answer-box"
                            style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                </VBox>

                <!-- RIGHT COLUMN -->
                <VBox spacing="20">
                    <Button text="Antwort B"
                            prefWidth="300"
                            prefHeight="90"
                            styleClass="answer-box"
                            style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

                    <Button text="Antwort D"
                            prefWidth="300"
                            prefHeight="90"
                            styleClass="answer-box"
                            style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                </VBox>

            </children>
        </HBox>
    </bottom>

</BorderPane>
