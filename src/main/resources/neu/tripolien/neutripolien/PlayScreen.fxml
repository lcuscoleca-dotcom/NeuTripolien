<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:controller="neu.tripolien.neutripolien.PlayscreenController"
            stylesheets="@quiz.css"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            style="-fx-background-color: #0d1b2a;">

    <!-- ================= TOP BAR ================= -->
    <top>
        <HBox alignment="CENTER_LEFT"
              spacing="12"
              style="-fx-padding: 15;">

            <!-- Difficulty -->
            <Label fx:id="difficultyLabel"
                   text="Normal"
                   style="-fx-text-fill: #e0e1dd;
                          -fx-font-size: 18px;
                          -fx-font-weight: bold;" />

            <Region HBox.hgrow="ALWAYS"/>

            <!-- LIVES -->
            <Label text="Lives:"
                   style="-fx-text-fill: #e0e1dd;
                          -fx-font-size: 18px;" />

            <Label fx:id="livesLabel"
                   text="❤️❤️❤️"
                   style="-fx-text-fill: red;
                          -fx-font-size: 22px;" />

            <Region HBox.hgrow="ALWAYS"/>

            <!-- Score -->
            <Label text="Score:"
                   style="-fx-text-fill: #e0e1dd;
                          -fx-font-size: 18px;" />

            <Label fx:id="Highscore_Points"
                   text="0"
                   style="-fx-text-fill: #fca311;
                          -fx-font-size: 18px;
                          -fx-font-weight: bold;" />
        </HBox>
    </top>

    <!-- ================= LEFT INFO ================= -->
    <left>
        <VBox alignment="CENTER"
              spacing="12"
              style="-fx-padding: 20;">

            <Label text="QUESTION"
                   style="-fx-text-fill: #778da9;
                          -fx-font-size: 14px;" />

            <Label fx:id="questionLabel"
                   text="1 / 10"
                   style="-fx-text-fill: white;
                          -fx-font-size: 26px;
                          -fx-font-weight: bold;" />
        </VBox>
    </left>

    <!-- ================= RIGHT INFO ================= -->
    <right>
        <VBox alignment="CENTER"
              spacing="12"
              style="-fx-padding: 20;">

            <Label text="TIME"
                   style="-fx-text-fill: #778da9;
                          -fx-font-size: 14px;" />

            <Label fx:id="timeLabel"
                   text="30s"
                   style="-fx-text-fill: #fca311;
                          -fx-font-size: 26px;
                          -fx-font-weight: bold;" />
        </VBox>
    </right>

    <!-- ================= CENTER ================= -->
    <center>
        <VBox alignment="CENTER"
              spacing="30">

            <Label text="WHAT FLAG IS THIS?"
                   style="-fx-text-fill: white;
                          -fx-font-size: 34px;
                          -fx-font-weight: bold;" />

            <ImageView fx:id="flagImageView"
                       fitHeight="320"
                       preserveRatio="true" />
        </VBox>
    </center>

    <!-- ================= ANSWERS ================= -->
    <bottom>
        <HBox alignment="CENTER"
              spacing="50"
              style="-fx-padding: 30;">

            <!-- LEFT -->
            <VBox spacing="20">
                <Button fx:id="buttonA"
                        onAction="#handleAnswer"
                        prefWidth="300"
                        prefHeight="90"
                        styleClass="answer-box"
                        style="-fx-font-size: 24px; -fx-font-weight: bold;" />

                <Button fx:id="buttonC"
                        onAction="#handleAnswer"
                        prefWidth="300"
                        prefHeight="90"
                        styleClass="answer-box"
                        style="-fx-font-size: 24px; -fx-font-weight: bold;" />
            </VBox>

            <!-- RIGHT -->
            <VBox spacing="20">
                <Button fx:id="buttonB"
                        onAction="#handleAnswer"
                        prefWidth="300"
                        prefHeight="90"
                        styleClass="answer-box"
                        style="-fx-font-size: 24px; -fx-font-weight: bold;" />

                <Button fx:id="buttonD"
                        onAction="#handleAnswer"
                        prefWidth="300"
                        prefHeight="90"
                        styleClass="answer-box"
                        style="-fx-font-size: 24px; -fx-font-weight: bold;" />
            </VBox>

        </HBox>
    </bottom>

</BorderPane>
